extends layout

block vars
    - var title = "PlayerTwo"

block content
  h2 Videos
  - if(videos.length) {
  .row
    each xar in videos
      .tile.col-xs-12.col-sm-4.col-md-3
        a.video-wrapper(href="/videos/##{xar.name}")
          span.glyphicon.glyphicon-play.action-icon
        div.tile-footer.bg-16(title="#{xar.name}") #{xar.name}
  - } else {
  a(href="/setup")
    h1 Add videos here
  - }
  - if(processing.length) {
    h1 Encoding
    .row
      each vid in processing
        .tile.col-xs-12.col-sm-4.col-md-3(data-vidname= "#{vid.name}")
          .video-wrapper
            span.glyphicon.glyphicon-random.action-icon
          div.tile-footer.bg-16(title="#{vid.name}") #{vid.name}
  - }
block footer
  